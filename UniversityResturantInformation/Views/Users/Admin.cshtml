                <a asp-action="RatingResult" asp-controller="Ratings" class="card-box-footer">View More <i class="fa fa-arrow-circle-right"></i></a>
            </div>
        </div>
        
    </div>
    <div class="row">
        <div class="col-lg-4 col-sm-6">
