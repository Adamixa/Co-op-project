@model IEnumerable<UniversityResturantInformation.Models.Menu>

@{
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/style.css" />

<br>
<br>

<div class="container-xl big-padding">

    <div class="card">
        <div class="card-title">
            <h4 style="text-align:center; padding-top:30px">Breakfast</h4>
        </div>
        <div class="card-body">
            <div class="row">
                @{
                    foreach (Menu menu in ViewBag.BreakfastMenus)
                    {
                        <div class="col-lg-4 col-md-6">

                            <div class="text-white text-center mb-4 votcard shadow-md bg-white p-4 pt-5">
                                <img class="rounded-pill shadow-md p-2" src="assets/images/testimonial/member-02.jpg" alt="">
                                <form asp-action="vote" method="post">
                                    <h4 type="text" class="mt-3 fs-5 mb-1 fw-bold" value="@menu.Id">@menu.Id</h4>
                                    <input type="hidden" name="menuM" value="@menu.Id">
                                    @foreach (Menu_Item item in ViewBag.Breakfast)
                                    {
                                        if (menu.Id == item.MenuId)
                                        {
                                            <p class="text-dark mt-3 mb-3 fs-8">@item.Item.ItemName</p>
                                        }
                                    }
                                    
                                    <input type="submit" class="btn btn-danger fw-bolder px-4 ms-2 fs-8" value="Vote">
                                </form>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="card">
        <div class="card-title">
            <h4 style="text-align:center; padding-top:30px">Lunch</h4>
        </div>
