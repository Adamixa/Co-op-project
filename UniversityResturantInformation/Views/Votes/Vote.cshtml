                                    <input type="hidden" name="menuM" value="@menu.Id">
                                    @foreach (Menu_Item item in ViewBag.Lunch)
                                    {
                                        if (menu.Id == item.MenuId)
                                        {
                                            <p class="text-dark mt-3 mb-3 fs-8">@item.Item.ItemName</p>
                                        }
                                    }

                                    <input type="submit" class="btn btn-danger fw-bolder px-4 ms-2 fs-8" value="Vote">
                                </form>
                            </div>
                        </div>
                    }
                }


            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
