@model IEnumerable<UniversityResturantInformation.Models.Rating>

@{
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item.ItemName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => rating.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => rating.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => rating.Item.ItemName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => rating.Rate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@rating.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@rating.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@rating.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
